@{
}
<div class="container">
    <h1 class="card-header ">Top Picks</h1>
</div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3 gy-3 mb-3">
                <div class="card" style="width: 19rem;height: 32rem;">
                    <img src="@item.Image" class="card-img-top" alt="..." style="height: 24rem;">
                    <div class="card-body">
                        <h5 class="card-title"> @item.Name</h5>
                        @*<p class="card-text">@item.Description</p>*@
                        @*<p class="card-text">@Html.DisplayNameFor(model => model.Year): @item.Year</p>*@
                        <a class="btn btn-dark bottom-0" asp-action="Details" asp-route-id="@item.ID">Rent For ₹@item.Cost</a>
                        <a class="btn btn-outline-success bottom-0" asp-action="Details" asp-route-id="@item.ID">Add To Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
